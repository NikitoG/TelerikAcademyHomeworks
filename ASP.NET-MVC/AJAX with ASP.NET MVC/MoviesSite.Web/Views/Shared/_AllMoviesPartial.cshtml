@model IEnumerable<MoviesSite.Web.Models.MovieViewModel>

<h2>All movies</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Female.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Male.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Studio.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Director)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Female.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Male.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Studio.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Director)
            </td>
            <td>
                @Ajax.ActionLink("Edit", "Edit", null, new { id = item.Id },
                                new AjaxOptions
                                {
                                    UpdateTargetId = "content",
                                    LoadingElementId = "displayLoading",
                                    HttpMethod = "GET",
                                    InsertionMode = InsertionMode.Replace
                                }, new { id = item.Id }) |
                @Ajax.ActionLink("Details", "Details", null, new { id = item.Id },
                                new AjaxOptions
                                {
                                    UpdateTargetId = "content",
                                    LoadingElementId = "displayLoading",
                                    HttpMethod = "GET",
                                    InsertionMode = InsertionMode.Replace
                                }, new { id = item.Id }) |
                @Ajax.ActionLink("Delete", "Delete", null, new { id = item.Id },
                                new AjaxOptions
                                {
                                    UpdateTargetId = "content",
                                    LoadingElementId = "displayLoading",
                                    HttpMethod = "GET",
                                    InsertionMode = InsertionMode.Replace
                                }, new { id = item.Id })
            </td>
        </tr>
    }

</table>
