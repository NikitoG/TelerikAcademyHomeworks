extends layout/index

block navigation
    ul.nav.navbar-nav
        each nav in ['Home', 'Phones', 'Tablets', 'Wearables']
            li(class=  nav == 'Tablets' ? "active" : "")
                a(href='/' + nav)= nav

block container
    h1(style='margin-top: 60px')  Tablets
    #container
        each tab, i in tablets
            div(style='float: left; width: 50%')
                h2
                    = tab.name
                img(src= tab.imageUrl)
                p= 'Announced: ' + tab.announced
            if i % 2 !== 0
                div(style='clear: left')