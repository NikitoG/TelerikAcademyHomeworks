extends layout/index

block navigation
    ul.nav.navbar-nav
        each nav in ['Home', 'Phones', 'Tablets', 'Wearables']
            li(class=  nav == 'Phones' ? "active" : "")
                a(href='/' + nav)= nav

block container
    h1(style='margin-top: 60px')  Phones
    #container
        each gsm, i in phones
            div(style='float: left; width: 50%')
                h2
                    = gsm.name
                img(src= gsm.imageUrl)
                p= 'Announced: ' + gsm.announced
            if i % 2 !== 0
                div(style='clear: left')